{
	"name": "nodejs-recipes-api",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"format": "prettier --write \"**/*.+(js|md|json)\"",
		"lint": "eslint \"**/*.js\"",
		"dev": "nodemon --exec babel-node -r ./node_modules/dotenv/config index.js",
		"start": "node build",
		"prebuild": "npm run format && npm run lint && rimraf build",
		"build": "rollup -c",
		"setup": "npm install && npm run build",
		"commit": "git-cz"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/theashraf/nodejs-recipes-api.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/theashraf/nodejs-recipes-api/issues"
	},
	"homepage": "https://github.com/theashraf/nodejs-recipes-api#readme",
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/node": "^7.2.2",
		"@babel/plugin-proposal-class-properties": "^7.3.4",
		"@babel/plugin-transform-spread": "^7.2.2",
		"@babel/preset-env": "^7.3.4",
		"@commitlint/cli": "^7.5.2",
		"@commitlint/config-conventional": "^7.5.0",
		"babel-eslint": "^10.0.1",
		"commitizen": "^3.0.7",
		"cz-conventional-changelog": "^2.1.0",
		"dotenv": "^7.0.0",
		"eslint": "^5.15.1",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-prettier": "^3.0.1",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"nodemon": "^1.18.10",
		"prettier": "^1.16.4",
		"rollup": "^1.6.0",
		"rollup-plugin-babel": "^4.3.2",
		"rollup-plugin-babel-minify": "^8.0.0",
		"rollup-plugin-commonjs": "^9.2.1",
		"rollup-plugin-json": "^3.1.0",
		"rollup-plugin-node-resolve": "^4.0.1",
		"rollup-plugin-replace": "^2.1.0"
	},
	"dependencies": {
		"body-parser": "^1.18.3",
		"cors": "^2.8.5",
		"ejs": "^2.6.1",
		"express": "^4.16.4",
		"helmet": "^3.16.0",
		"joi": "^14.3.1",
		"lodash": "^4.17.11",
		"mongoose": "^5.4.19",
		"morgan": "^1.9.1",
		"nodemailer": "^5.1.1"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	}
}
